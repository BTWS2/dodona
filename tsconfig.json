{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2021",
    "downlevelIteration": true,
    "baseUrl": "app",
    "paths": {
      "*": ["assets/javascripts/*"],
      "lit-element-state": ["assets/javascripts/types/module-types/lit-element-state"],
    },
    "pretty": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "assets/javascripts/types/module-types"
    ]
  },
  "exclude": ["**/*.spec.ts", "node_modules", "public", "data", "assets/javascripts/types/module-types/**"],
  "compileOnSave": false
}
