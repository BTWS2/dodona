{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2021",
    "downlevelIteration": true,
    "baseUrl": "app",
    "paths": {
      "*": ["assets/javascripts/*"]
    },
    "pretty": true,
    "allowUmdGlobalAccess": true
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public", "data"],
  "compileOnSave": false
}
