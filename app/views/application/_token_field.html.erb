<pre class="code-wrapper"><code id="token-field"><%= value %></code><d-copy-button targetId="token-field"></d-copy-button></pre>
<% if reset_url.present? %>
  <%= link_to reset_url,
              method: :post,
              data: {confirm: t('general.confirm_reset_token')},
              remote: true,
              class: 'btn btn-outline btn-icon ms-1 flex-shrink-0' do %>
    <i class="mdi mdi-refresh mdi-24"></i>
  <% end %>
<% end %>
